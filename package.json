{
    "name": "@ticket721/web-app",
    "private": true,
    "version": "1.0.0",
    "description": "t721-web-app - Web App to use the ticket721 plateform",
    "main": "index.js",
    "scripts": {
        "setup:links": "link-module-alias",
        "postinstall": "npm run setup:links",
        "next": "ts-node --project ./script.tsconfig.json ./scripts/index.ts",
        "test:editorconfig": "editorconfig-cli",
        "test:lint": "tslint --project .",
        "test:jest": "jest --no-cache",
        "coverage:upload": "cat ./coverage/lcov.info | coveralls"
    },
    "_moduleAliases": {
        "@components": "./components",
        "@web_components": "./web_components",
        "@web_views": "./web_views",
        "@utils": "./utils",
        "@static": "./static"
    },
    "jest": {
        "verbose": true,
        "collectCoverage": true,
        "moduleDirectories": [
            "node_modules",
            "components"
        ],
        "setupFiles": [
            "<rootDir>/test-shim.js",
            "<rootDir>/test-setup.js"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/test-preprocessor.js"
        },
        "testMatch": [
            "**/__tests__/*.(ts|tsx|js)",
            "**/*.test.(ts|tsx|js)"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ticket721/web-app.git"
    },
    "author": "Iulian Rotaru",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ticket721/web-app/issues"
    },
    "homepage": "https://github.com/ticket721/web-app#readme",
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.15",
        "@fortawesome/free-solid-svg-icons": "^5.7.2",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "@htmlacademy/editorconfig-cli": "^1.0.0",
        "@redux-saga/types": "^1.0.2",
        "@types/express": "^4.16.1",
        "@types/next": "^8.0.1",
        "@types/react": "^16.8.3",
        "@types/react-dom": "^16.8.2",
        "@zeit/next-css": "^1.0.1",
        "@zeit/next-typescript": "^1.1.1",
        "antd": "^3.14.1",
        "babel-plugin-import": "^1.11.0",
        "bignumber.js": "^8.1.1",
        "device-detect": "^1.0.7",
        "dotenv": "^6.2.0",
        "ethereumjs-tx": "^1.3.7",
        "ethereumjs-wallet": "^0.6.3",
        "ethvtx": "2.0.2",
        "exenv": "^1.2.2",
        "express": "^4.16.4",
        "geopattern": "^1.2.3",
        "grommet": "^2.5.5",
        "husky": "^1.3.1",
        "less": "^3.9.0",
        "less-vars-to-js": "^1.3.0",
        "link-module-alias": "^1.1.6",
        "linted": "^1.0.5",
        "next": "^8.0.4",
        "next-i18next": "^0.34.0",
        "next-images": "^1.1.0",
        "next-redux-saga": "^3.0.0-beta.1",
        "next-redux-wrapper": "^2.0.0-beta.6",
        "password-validator": "^4.1.1",
        "pouchdb-adapter-idb": "^7.0.0",
        "react": "^16.8.2",
        "react-dom": "^16.8.2",
        "react-lottie": "^1.2.3",
        "react-redux": "^6.0.1",
        "react-shadow": "^16.3.2",
        "react-video-cover": "^1.2.2",
        "redux": "^4.0.0",
        "redux-saga": "^0.16.0",
        "rxdb": "^8.0.5",
        "rxjs": "^6.4.0",
        "shards-react": "^1.0.3",
        "strapi-sdk-javascript": "^0.3.1",
        "styled-components": "^4.1.3",
        "ts-node": "^8.0.2",
        "tslint": "^5.12.1",
        "tslint-react": "^3.6.0",
        "typescript": "^3.3.3",
        "url-parse": "^1.4.4",
        "web3": "1.0.0-beta.32"
    },
    "devDependencies": {
        "@types/enzyme": "^3.9.1",
        "@types/jest": "^24.0.6",
        "@types/next-redux-saga": "^3.0.1",
        "@types/react-redux": "^7.0.1",
        "@zeit/next-less": "^1.0.1",
        "coveralls": "^3.0.2",
        "deep-extend": ">=0.5.1",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.9.1",
        "jest": "^24.1.0",
        "merge": ">=1.2.1",
        "react-test-renderer": "^16.8.2"
    },
    "editorconfig-cli": [
        "./package.json",
        "./pages/*.tsx",
        "./components/*.tsx",
        "*.js"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "npm run test:lint && npm run test:editorconfig"
        }
    }
}
